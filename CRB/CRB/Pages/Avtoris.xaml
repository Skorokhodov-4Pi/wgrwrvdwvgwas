<Window x:Class="CRB.Pages.Avtoris"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRB.Pages"
        mc:Ignorable="d"
        Title="Avtoris" Height="550" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Resources/backgr.jpg"/>
        </Border.Background>
    <Border CornerRadius="10"
            BorderThickness="5"
            Opacity="0.85">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="#057ab8" Offset="0"/>
                <GradientStop Color="#02b66a" Offset="0.75"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#057ab8" Offset="0"/>
                    <GradientStop Color="#02b66a" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
               
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Вход в систему"
                           Foreground="DarkGray"
                           FontSize="10"
                           FontFamily="Alegreya"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
                <Button x:Name="btnMin" Background="#28AEED"
                        BorderThickness="0"
                        Content="-"
                        Foreground="White"
                        FontSize="16"
                        FontFamily="Alegreya"
                        Cursor="Hand"
                        Grid.Column="1"
                        Click="btnMin_Click"/>

                <Button x:Name="btnClose" Background="#FF04804C"
                        BorderThickness="0"
                        Content="X"
                        Foreground="White"
                        FontSize="16"
                        FontFamily="Alegreya"
                        Cursor="Hand"
                        Grid.Column="2"
                        Click="btnClose_Click"/>

                <StackPanel Width="250"
                            Grid.Row="2"
                            Orientation="Vertical"
                            Margin="0,35,0,0">
                    <Image Source="/Resources/CRB.png" Width="100" Height="100"/>
                    <TextBlock Text="ВХОД"
                               Foreground="White"
                               FontSize="25"
                               FontFamily="Alegreya"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Логин"
                               Foreground="White"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Alegreya"
                               Margin="0,35,0,0"/>
                    
                    <TextBox x:Name="LoginUser"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Alegreya"
                             Background="Transparent"
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="#FF04804C"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"/>

                    <TextBlock Text="Пароль"
                             Foreground="White"
                             FontSize="12"
                             FontWeight="Medium"
                             FontFamily="Alegreya"
                             Margin="0,35,0,0"/>

                    <PasswordBox x:Name="PasswordUser"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Alegreya"
                             Background="Transparent"
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="#FF04804C"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"/>
                    
                    <Button x:Name="btnVhod" Background="#28AEED"
                             BorderThickness="0"
                             Content="Вход"
                             Foreground="White"
                             FontSize="16"
                             FontFamily="Alegreya"
                             Cursor="Hand"
                             Grid.Column="2"
                             Click="btnVhod_Click"
                             Margin="0,50,0,0"
                             Height="40"
                             Width="150"/>

                </StackPanel>
                

            </Grid>
         
        </Border>
    </Border>
</Window>
